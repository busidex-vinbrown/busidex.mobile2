<resources>
	<style name="SearchBar" parent="android:Theme">
		<item name="android:textColor">@color/labelFontColorDark</item>
		<item name="android:background">@color/layoutBackground</item>
	</style>

    <style name="Theme.Busidexactionbar" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_busidexactionbar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Busidexactionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Busidexactionbar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Busidexactionbar</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Busidexactionbar</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Busidexactionbar</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_busidexactionbar</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_busidexactionbar</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Busidexactionbar</item>
    </style>

    <style name="ActionBar.Solid.Busidexactionbar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_busidexactionbar</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_busidexactionbar</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_busidexactionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Busidexactionbar</item>
    </style>

    <style name="ActionBar.Transparent.Busidexactionbar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_busidexactionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Busidexactionbar</item>
    </style>

    <style name="PopupMenu.Busidexactionbar" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_busidexactionbar</item>	
    </style>

    <style name="DropDownListView.Busidexactionbar" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_busidexactionbar</item>
    </style>

    <style name="ActionBarTabStyle.Busidexactionbar" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_busidexactionbar</item>
    </style>

    <style name="DropDownNav.Busidexactionbar" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_busidexactionbar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_busidexactionbar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_busidexactionbar</item>
    </style>
    
    <style name="ProgressBar.Busidexactionbar" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_busidexactionbar</item>
    </style>
    
    <style name="ActionButton.CloseMode.Busidexactionbar" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_busidexactionbar</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Busidexactionbar.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Busidexactionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Busidexactionbar</item>
    </style>
</resources>