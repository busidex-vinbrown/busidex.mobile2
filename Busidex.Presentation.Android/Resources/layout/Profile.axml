<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/layoutBackground">
    <TextView
        android:text="Update Your Profile"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblProfileHeader"
        android:textColor="@color/textInputColor"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp" />
    <TextView
        android:text="Choose an email address and password here so you can access your cards on the web or another mobile device."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtProfileDescription"
        android:textColor="@color/labelFontColor"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp" />
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profileLayout">
        <TextView
            android:text="Email"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblProfileEmail"
            android:textColor="@color/labelFontColor"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp" />
        <EditText
            android:inputType="textEmailAddress"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblProfileEmail"
            android:id="@+id/txtProfileEmail"
            android:layout_marginLeft="20dp"
            android:textColor="@color/textInputColor"
            android:background="@android:drawable/editbox_background" />
        <TextView
            android:text="Password"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtProfileEmail"
            android:id="@+id/lblProfilePassword"
            android:textColor="@color/labelFontColor"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />
        <EditText
            android:inputType="textPassword"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblProfilePassword"
            android:id="@+id/txtProfilePassword"
            android:textColor="@color/textInputColor"
            android:layout_marginLeft="20dp"
            android:background="@android:drawable/editbox_background" />
        <ImageView
            android:src="@drawable/checkmark"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/txtProfileEmail"
            android:id="@+id/imgProfileEmailSaved"
            android:scaleType="fitXY"
            android:background="@color/layoutBackground"
            android:layout_below="@id/lblProfileEmail"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp" />
        <ImageView
            android:src="@drawable/checkmark"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/txtProfilePassword"
            android:id="@+id/imgProfilePasswordSaved"
            android:layout_below="@id/lblProfilePassword"
            android:background="@color/layoutBackground"
            android:scaleType="fitXY"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp" />
        <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/txtProfilePassword"
            android:id="@+id/btnSaveProfile"
            android:background="@android:drawable/editbox_background"
            android:textColor="@color/buttonFontColor"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp" />
    </RelativeLayout>
</LinearLayout>