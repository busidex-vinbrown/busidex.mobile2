<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Busidex3.Views.Login"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
             ios:Page.UseSafeArea="true"
             Visual="Material"
             BackgroundColor="#FFEEF3FA">
        <ContentPage.Padding>
            <OnPlatform x:TypeArguments="Thickness">
                <On Platform="iOS" Value="0,40,0,0" />
            </OnPlatform>
        </ContentPage.Padding>
    <StackLayout Orientation="Vertical" Margin="35,50" BackgroundColor="#FFEEF3FA">
        <Image Source="busidex_icon_180x180.png"
               Margin="0,10,0,0"
               HeightRequest="90"
               Aspect="AspectFit"
               WidthRequest="90" />

        <Entry x:Name="txtUserName" 
                Margin="0,20,0,0"
                Text="{Binding UserName}" 
                Placeholder="User Name"
                HorizontalTextAlignment="Center" 
                TextChanged="TxtUserName_OnTextChanged"/>
        <Entry IsPassword="True" 
                x:Name="txtPassword" 
                Placeholder="Password"
                Text="{Binding Password}" 
                HorizontalTextAlignment="Center" 
                TextChanged="TxtPassword_OnTextChanged"/>
        <Label x:Name="lblLoginError" 
                Text="Incorrect UserName or Password" 
                TextColor="Red" 
                FontSize="Small"
                HorizontalOptions="CenterAndExpand"
                IsVisible="False"/>
        <Button Text="Login" 
                Margin="0,10"
                TextColor="White"
                BackgroundColor="#03A9F4"
                x:Name="btnLogin" 
                Clicked="BtnLogin_OnClicked"></Button>
        <Button Text="Forgot My Password" 
                TextColor="White"
                Margin="0,10"
                BackgroundColor="#03A9F4"
                x:Name="btnForgotPassword" 
                Clicked="BtnForgotPassword_OnClicked"></Button>

        <ActivityIndicator 
            x:Name="prgSpinner" 
            HeightRequest="40" WidthRequest="40" 
            Color="#03A9F4" 
            IsVisible="False"
            IsRunning="True"/>

        <StackLayout Orientation="Horizontal" Margin="0, 10">
            <Label Text="Don't have an account?" 
                   TextColor="#03A9F4"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="Center"
                   FontSize="17"
                   VerticalOptions="End">
            </Label>
            <Label Text="Create One" 
                   TextColor="#03A9F4"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="Center"
                   FontSize="17"
                   TextDecorations="Underline"
                   VerticalOptions="End"
                   x:Name="btnCreate">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BtnCreate_Clicked"
                                          NumberOfTapsRequired="1" />
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
        
    </StackLayout>
</ContentPage>